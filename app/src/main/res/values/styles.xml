<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="information_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="information_output">
        <item name="android:background">@drawable/style_output</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="get_inf_btn">
        <item name="android:background">@drawable/style_get_inf_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="separator_style">
        <item name="android:background">@drawable/style_separator</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
</resources>